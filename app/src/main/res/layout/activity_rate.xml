<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RateActivity">

    <TextView
        android:text="Thanks for riding uber"
        android:textSize="22sp"
        android:padding="10dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingBar"
        android:rating="0"
        android:progressTint="@color/cardview_dark_background"
        android:secondaryProgressTint="@color/cardview_dark_background"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtComment"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:hint="Comments"
        android:textColor="@color/colorPrimaryVariant"
        android:textColorHint="@color/colorPrimaryVariant"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/colorPrimaryVariant"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimaryVariant"
        app:met_singleLineEllipsis="false"/>

    <Button
        android:id="@+id/btnSubmit"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>